    <section id="challange">
        <div class="sliderLeft">
            <h2>Active Challanges</h2>
            @if (ViewBag.ActiveChallenge != null)
            {
                List<EChallenge.Models.Challenge> lstChallenge = (List<EChallenge.Models.Challenge>)ViewBag.ActiveChallenge;
