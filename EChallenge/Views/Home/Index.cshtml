        </div>
        <div class="contactForm col-md-6">
            <form class="cd-form floating-labels">
                <fieldset>
                    <div class="icon">
                        <label for="cd-name" class="cd-label">Name</label>
                        <input type="text" required="" id="cd-name" name="cd-name" class="user">
                        <div class="clr"></div>
                    </div>

                    <div class="icon">
                        <label for="cd-email" class="cd-label">Email</label>
                        <input type="email" required="" id="cd-email" name="cd-email" class="email">
                        <div class="clr"></div>
                    </div>
                    <div class="icon">
                        <label for="cd-textarea" class="cd-label">Message</label>
                        <textarea required="" id="cd-textarea" rows="10" name="cd-textarea" class="message"></textarea>
                        <div class="clr"></div>
                    </div>
                    <div>
                        <input type="submit" class="button" value="Send Message">
                    </div>
                </fieldset>
            </form>
        </div>
        <div class="clr"></div>
    </section>
